  "name": "study-nextjs-with-rtkq",
  "version": "0.1.0",
  "packageManager": "pnpm@7.26.3",
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
