    "eslint-plugin-storybook": "^0.6.10",
    "git-cz": "^4.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.8.3",
